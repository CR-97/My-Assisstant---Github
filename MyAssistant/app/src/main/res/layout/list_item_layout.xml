<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RL_entries_item_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:background="@color/mywhite"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/LL_entries_item_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/day"
                    android:layout_width="40dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Wed"
                    android:textColor="@color/mytimetext"
                    android:textSize="23dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2017 6"
                    android:textColor="@color/myheadertext"
                    android:textSize="16dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/LL_entries_item_icon"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:id="@+id/LL_entries_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/item_weather"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_weather_sunny"/>

                    <ImageView
                        android:id="@+id/item_mood"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_mood_happy"/>

                </LinearLayout>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="View"
                    android:textColor="@color/mywhite"
                    android:background="@drawable/bluebg"
                    android:id="@+id/view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/LL_entries_item_status"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Delete"
                    android:textColor="@color/myblue"
                    android:id="@+id/delete"
                    android:background="@drawable/bluestroke"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/LL_entries_item_icon"
                android:layout_toRightOf="@id/LL_entries_item_day"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mytimetext"
                    android:text="11:11"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/mybodytext"
                    android:text="No Title"
                    android:maxLines="1"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/mybodytext"
                    android:text="Your Body"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16dp"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
